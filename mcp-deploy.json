{
  "name": "Zotero Assistant",
  "description": "Zotero MCP server for searching and managing Zotero libraries",
  "version": "0.3.0",
  "worker": {
    "name": "zotero-assistant-mcp",
    "durableObjectBinding": "MCP_OBJECT",
    "durableObjectClassName": "ZoteroMCP",
    "compatibilityDate": "2025-04-01",
    "compatibilityFlags": ["nodejs_compat"],
    "migrationTag": "v1"
  },
  "secrets": [
    {
      "key": "ZOTERO_API_KEY",
      "label": "Zotero API Key",
      "type": "password",
      "required": true,
      "helpText": "Your Zotero API key for authentication",
      "helpUrl": "https://www.zotero.org/settings/keys",
      "placeholder": "sk-...",
      "test": {
        "url": "https://api.zotero.org/users/{{ZOTERO_LIBRARY_ID}}/collections?limit=1",
        "method": "GET",
        "headers": { "Zotero-API-Key": "{{value}}" },
        "success": [200],
        "errors": {
          "401": "Invalid API key",
          "403": "API key doesn't have access to this library",
          "404": "Library not found â€” check your Library ID"
        }
      }
    },
    {
      "key": "ZOTERO_LIBRARY_ID",
      "label": "Zotero Library ID",
      "type": "text",
      "required": true,
      "helpText": "Your Zotero user library ID (numeric ID from your account)",
      "helpUrl": "https://www.zotero.org/settings/keys",
      "placeholder": "12345678"
    }
  ],
  "config": [],
  "autoSecrets": ["BEARER_TOKEN"]
}
